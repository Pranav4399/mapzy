<div class="w-screen h-screen">

  <!-- Top Menu -->
  <header class="sticky top-0 z-50 w-full bg-white shadow-lg">
      <div class="md:flex items-center justify-between py-2 px-8 md:px-12">
          <div class="flex justify-between items-center">
             <div class="text-2xl font-bold text-gray-800 md:text-3xl">
              <%= link_to "Mapzy", root_path %>
             </div>
          </div>
          <div class="flex flex-col md:flex-row hidden md:block -mx-2">
            <%= link_to "Docs", root_path, class: 'button--top-menu' %>
            <%= link_to "Help", root_path, class: 'button--top-menu' %>
          </div>
      </div>
  </header>

  <!-- Map -->
  <main class="relative w-full h-full">
    <%= yield %>
  </main>

  <!-- Sticky Bottom Menu -->
  <nav class="sticky bottom-4 z-50 flex justify-center">
      <%= link_to new_dashboard_map_location_path(@map.id) do %>
        <button class="button--sticky shadow-lg flex flex-col p-4">
          <span class="flex-1 text-5xl">+</span>
          <span class="flex-1 text-base">Add Location</span>
        </button>
      <% end %>
  </nav>
</div>